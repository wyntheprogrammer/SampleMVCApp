@model IEnumerable<SampleMVCApp.Models.Entities.Student>

@{
    ViewData["Title"] = "All Students";
}

<div class="d-flex justify-content-between my-2">
    <h2>All Students</h2>
    <button type="button" class="btn btn-primary px-3 py-0" 
         onclick="window.location.href='@Url.Action("Create", "Home")'">
        <i class="bi bi-plus"></i>New
    </button>
</div>



<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Subscribed</th>
            <th>Tools</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td>@(student.Subscribed ? "Yes" : "No")</td>
                <td class="text-center">
                    <a type="button" 
                        asp-action="Edit" asp-route-id="@student.Id" 
                          class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                    <button type="button" 
                        data-bs-toggle="modal" data-bs-target="#deleteModal" 
                        onclick="setDeleteId(@student.Id)"
                        class="btn btn-danger"><i class="bi bi-trash-fill"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>



<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="deleteForm" method="post">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Are you sure you want to delete this item?
        </div>
        <input type="hidden" name="id" id="deleteId" />
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-danger">Delete</button>
        </div>
      </form>
    </div>
  </div>
</div>

